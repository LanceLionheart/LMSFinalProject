@using System;
@using System.Collections.Generic;
@using System.Linq;
@using System.Text;
@using System.Threading.Tasks;
@using LMSFinalProject.DATA.EF;
@*@model LMSFinalProject.DATA.EF.CourseCompletion*@
@*@model LMSFinalProject.DATA.EF.LessonView*@

@using Microsoft.AspNet.Identity


@{
    ViewBag.Title = "Employee Progress";
}

<h2 style="padding-top:4em">@ViewBag.Title</h2>

<h3>Completed Lessons</h3>
<ul style="padding-bottom:4em">
    @foreach (LessonView le in ViewBag.OrderLesson)  //Home Controller
    {
    <li style="color:black; padding-left:2em">
        @le.UserDetail.FirstName &mdash; <strong>@string.Format($"{le.Lesson.LessonTitle}")</strong> &mdash; @string.Format($"{le.DateViewed}")
    </li>
    }

</ul>

<h3>Completed Courses</h3>
<ul>
    @foreach (CourseCompletion cou in ViewBag.OrderCourse)
    {
    <li>
        @cou.UserDetail.FirstName &mdash; <strong>@string.Format($"{cou.Course.CourseName}")</strong> @string.Format($"{cou.DateCompleted}")
    </li>
    }

    @*@Html.LabelFor(model => model.UserId, "UserId", htmlAttributes: new { @class = "control-label col-md-2" })*@
    @*@Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })*@

</ul>

<h3>Completed Annual Training</h3>
@foreach (CourseCompletion ad in ViewBag.AnnualDone)
{
<li>
    @ad.UserDetail.FirstName  &mdash; <strong>@string.Format($"{DateTime.Now}")</strong>
</li>
}




<script>

   //Progress Bar for Employee Course Completion
$( function() {
    $( "#UserId" ).progressbar({
      value: 6
    });
  } );
</script>

